<table class="tabular">  
  <caption><%= pluralize(@results_total.size, 'Lumbarpuncture appt') %><%#= paginated ? pagination_info(@lumbarpunctures) : pluralize(@lumbarpunctures.length, 'Lumbarpuncture appt') %></caption>
  <thead>
    <tr>
		<% @column_headers.each do |column_header|%>
	      <th><%= column_header%></th>
	  <% end %>

      <th></th>
<% if edit_count > 0 %>
       <th></th>
<% end %>
      <th></th>
    </tr>
  </thead>

<!--   add params and order by link to col header!!!!!!!!!!!    -->
  <tfoot><tr><td colspan=(column_header.size+3)>
		 <%=    paginate @results %> 
		<%# if paginated %>
    	<%#= @lp_search.nil? ? will_paginate(@lumbarpunctures) : will_paginate(@lumbarpunctures, :params => { :lp_search => @lp_search }) %>
		<%# end %>
  </td></tr></tfoot>

  <tbody>
    <% @results.each do |result| %>
       <%   
             lumbarpuncture = Lumbarpuncture.find(result[@column_headers.size-1])
             appointment = Appointment.find(lumbarpuncture.appointment_id) 
             vgroup = Vgroup.find(appointment.vgroup_id)
            result.delete_at(@column_headers.size-1)
        %>
	  <tr>
	   <% for i in 0..@column_number-1 %>
	    <td><%= result[i] %></td>
	   <% end %>
        <td style="width: 6em;" nowrap>
          <%= link_to 'show', lumbarpuncture %>
		  <% if edit_count > 0 %>
		          <%= link_to 'edit', edit_lumbarpuncture_path(lumbarpuncture) %>
		  <% end %>
        </td>
       <td>
<% if edit_count > 0 %>
	<%= link_to  'New', new_lumbarpuncture_path+"/"+vgroup.id.to_s %>
<% end %></td>

      </tr>
    <% end %>
  </tbody>

</table>


